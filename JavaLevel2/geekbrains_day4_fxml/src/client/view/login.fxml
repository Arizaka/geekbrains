<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.LoginController">
    <center>
<VBox alignment="CENTER">
            <HBox alignment="CENTER">
                <TextField fx:id="loginField" promptText="Login">
                </TextField>
            <padding>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </padding>
            </HBox>
            <HBox alignment="CENTER">
                <PasswordField fx:id="passwordField" promptText="Password">
                </PasswordField>
            <padding>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </padding>
            </HBox>
            <HBox alignment="CENTER">
                <Button fx:id="commitButton" maxWidth="Infinity" onMousePressed="#commitButton" stylesheets="@../css/button.css" text="Login" />
            <padding>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </padding>
            </HBox>
         <effect>
            <DropShadow blurType="GAUSSIAN" color="#000000e2" height="25.0" radius="13.25" spread="0.08" width="30.0" />
         </effect>
</VBox>
    </center>
   <left>
      <HBox BorderPane.alignment="CENTER" />
   </left>
   <right>
      <HBox BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
